!!! 5
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    %title
      - if content_for?(:meta_title)
        = yield :meta_title
    = stylesheet_link_tag "application"
    - if current_user
      = stylesheet_link_tag "frontend_admin/frontend_admin"
    /[if IE 6]
      = stylesheet_link_tag 'ie6'
    /[if IE 7]
      = stylesheet_link_tag 'ie7'
    - if content_for?(:css)
      = yield :css
    - if current_user
      = javascript_include_tag "/javascripts/ckeditor/ckeditor", "frontend_admin/frontend_admin"
    - if content_for?(:js)
      = yield :js
    = csrf_meta_tags
    - if content_for?(:meta_description)
      %meta{'name' => 'description', :content => yield(:meta_description)}/
    = yield :header
  %body
    #body
      = content_for?(:theme) ? yield(:theme) : yield
      = yield :admin_bar